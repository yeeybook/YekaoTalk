<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_message_linearMain">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_message_linearDestination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/item_message_imgProfile"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_message_tvName"
            android:textStyle="bold"
            android:textSize="11dp"
            android:text="이름"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item_message_linearTime">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_message_tvReadCounterLeft"
            android:textSize="10dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:text="L"
            android:visibility="gone"
            android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_gravity="bottom"
        android:id="@+id/item_message_tvLeftTimestamp"
        android:visibility="gone"
        android:text="1:11 PM"
        android:textSize="10dp"
        android:textColor="#4b4b4b"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메세지"
        android:textSize="11dp"
        android:id="@+id/item_message_tvMessage"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_message_tvReadCounterRight"
            android:textSize="10dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:text="R"
            android:layout_gravity="left"
            android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom"
        android:id="@+id/item_message_tvRightTimestamp"
        android:visibility="gone"
        android:text="1:11 PM"
        android:textSize="10dp"
        android:textColor="#4b4b4b"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>