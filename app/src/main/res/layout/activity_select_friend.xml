<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SelectFriendActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/selectFriendActivityRecyclerview"></android.support.v7.widget.RecyclerView>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="채팅방 만들기"
        android:id="@+id/selectFriendActivityBtn"
        android:textColor="#FFFFFF"
        android:background="@color/choco"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

</LinearLayout>